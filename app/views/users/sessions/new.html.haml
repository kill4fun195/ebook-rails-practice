%body{:style => "background:#F7F7F7;font-size:14px;color:#73879C;"}
  %div
    #wrapper
      %div{:style => "text-align:center"}
        %p.notice{:style => "color:red"}= notice
        %p.alert{:style => "color:red"}= alert
      #login.form
        %section.login_content
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %h1{:style => "font-size:26px"} Login Form
            .field
              = f.email_field :email, autofocus: true , class: "form-control", placeholder: "Email"
            .field
              = f.password_field :password, autocomplete: "off" , class: "form-control" , placeholder: "password"
            - if devise_mapping.rememberable?
              .field{:style => "width:60%; float:right"}
                = f.check_box :remember_me
                = f.label :remember_me
            .actions
              = f.submit "Log in" , class: "btn btn-default submit"
        .clearfix
        .separator
          %p.change_link
            New to site?
            %a.to_register{:href => new_user_registration_path} Create Account
          .clearfix
          %br/
