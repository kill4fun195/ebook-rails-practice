<h1>Users!!!</h1>
<table class = "table">
  <tr class = "title">
    <td>STT</td>
    <td>User_name</td>
    <td>Role</td>
    <td>Password</td>
    <td>Email</td>
    <td colspan="3"></td>
  </tr>
  <% @users.each do |f| %>
  <tr>
    <td><%= f.id %></td>
    <td><%= f.name_user %></td>
    <td><%= f.role %></td>
    <td><%= f.password %></td>
    <td><%= f.email %></td>
    <td><%= link_to "Show",user_path(f) %></td>
    <td><%= link_to "update",edit_user_path(f) %></td>
    <td><%= link_to "Delete",user_path(f),method: :delete %></td>
  </tr>
  <% end -%>
</table>
<%= link_to "New user",new_user_path%>

