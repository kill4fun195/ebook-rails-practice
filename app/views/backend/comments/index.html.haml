
%table#comments-table.display.no-wrap{"data-source" => backend_comments_path(format: :json)}
  %thead
    %tr
      %th Id
      %th Body
      %th Author
      %th Title Article
      %th Created_at
      %th Approve
      %th
      %th
      %th
  %tbody                                 
.modal.fade{role: :dialog, id: "myModalEdit"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{type: :button,"data-dismiss" => "modal"} &times;
        - if current_user.has_role? :comment_manager or current_user.has_role? :editor
          %h4.modal-title Cannot authorize resource
        - else 
          %h4.modal-title Modal Edit       
        .content-myModalEdit  
