<script>
  tinymce.init({
    selector: 'textarea',
    menubar: false
  });
  </script>
<h1>New Article!!!</h1>
<%= form_for @article,url: backend_articles_path do |f| %>
  <p>
  <%= f.label :Title %>
  <br>
  <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Description %>
    <br>
    <%= f.text_area  :description %>
  </p>
  <p>
    <%= f.label :Details %>
    <br>
    <%= f.text_area  :details  %>
  </p>
  <p>
    <%= f.label :Linkdownload %>
    <br>
    <%= f.text_field :linkdownload %>
  </p>
  <p>
    <%= f.label :Weight %>
    <br>
    <%= f.text_field :weight %>
  </p>
  <p>
      <%= f.label :Image %>
    <br>
      <%= f.file_field :avatar %>
  </p>
  <p>
    <% @categories.each do |c| %>
      <p><%= check_box_tag "category_id[]", c.id%> <%= c.name_category %></p>
    <% end %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end -%>
<%= link_to 'Back', backend_articles_path %>

 
