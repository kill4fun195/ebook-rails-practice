:javascript
  tinymce.init({
    selector: 'textarea',
    menubar: false
  });
#backend_create_article  
  %h1 New Article!!!
  = form_for @article,url: backend_articles_path do |f|
    %p
      = f.label :Title
      %br/
      = f.text_field :title
    %p
      = f.label :Description
      %br/
      = f.text_area  :description
    %p
      = f.label :Details
      %br/
      = f.text_area  :details
    %p
      = f.label :Linkdownload
      %br/
      = f.text_field :linkdownload
    %p
      = f.label :Weight
      %br/
      = f.text_field :weight
    %p
      = f.label :Image
      %br/
      = f.file_field :avatar
    %ul.backend-list-category{:style => "padding:0px;"}
      - @categories.each do |c|
        %li{:style => "text-decoration:none;list-style:none"}
          = check_box_tag "category_id[]", c.id
          = c.name_category
    %button.btn.btn-success{:type => "input",:name => "commit",:value => "Create Article",:style => "width:40%"} Create Article
  = link_to 'Back', backend_articles_path
