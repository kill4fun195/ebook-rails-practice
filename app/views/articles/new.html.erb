<h1>New Article!!!</h1>

 <script>
  tinymce.init({
    selector: 'textarea',
    menubar: false
  });
  </script>


<%= form_for @article ,url: articles_path, html: { multipart: true } do |f| %>
<p>
  <%= f.label :Title %>
  <br>
  <%= f.text_field :title %>
</p>

<%= f.label :Details %>
<br>
<%= f.text_area  :details  %>

<p>
  <%= f.label :Description %>
  <br>
  <%= f.text_area  :description %>
</p>
<p>
  <%= f.label :Linkdownload %>
  <br>
  <%= f.text_field :linkdownload %>
</p>
<p>
    <%= f.file_field :avatar %>
</p>
<p>
  <% @categories.each do |c| %>
    <p><%= check_box_tag "category_id[]", c.id%> <%= c.name_category %></p>
  <% end %>
</p>

<p>
  <%= f.submit %>
</p>
  <% end %>

