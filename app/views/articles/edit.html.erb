<h1>Edit Article!!!</h1>
<%= form_for @article do |f| %>
<p>
  <%= f.label :Title %>
  <br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :Details %>
  <br>
  <%= f.text_area  :details %>
</p>
<p>
  <%= f.label :Description %>
  <br>
  <%= f.text_area  :description %>
</p>
<p>
  <td><%= image_tag f.object.avatar.url(:thumb) %></td>
</p>
<p>
  <%= f.file_field :avatar %>
</p>
<p>
  <% @categories.each do |c| %>
  <% checked = (@category_ids.include? c.id)? true : false %>
    <p><%= check_box_tag "category_id[]", c.id, checked %> <%= c.name_category %></p>
  <% end %>
</p>
<p>
  <%= f.submit %>
</p>
  <% end -%>

