<h1> Articles </h1>
<table class = "table">
  <tr class = "title">
    <td>STT</td>
    <td>Title</td>
    <td>Details</td>
    <td>Description</td>
    <td>Author</td>
    <td>Comments</td>
    <td>Image</td>
    <td colspan ="3"></td>
  </tr>
  <% @articles.each do |f| %>
  <tr>
    <td><%= f.id %></td>
    <td><%= f.title %></td>
    <td><%= f.details %></td>
    <td><%= f.description %></td>
    <td><%= f.user.name_user %></td>
    <td><%= f.comments.count %></td>
    <td><%= image_tag f.avatar.url(:thumb) %></td>
    <td><%= link_to "Show",article_path(f) %></td>
    <td><%= link_to "Update",edit_article_path(f) %></td>
    <td><%= link_to "Delete",article_path(f),method: :delete %></td>
  </tr>
  <% end -%>
</table>
<%= link_to "New Article",new_article_path %>
